<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.lutro"
		name="Lua Engine (Lutro)"
		version="0.0.1.4"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.default" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_android="libgame.libretro.lutro.so">
		<platforms>LUA</platforms>
		<extensions>lutro|lua</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en_GB">Lua Engine (Lutro) 0.0.1</summary>
